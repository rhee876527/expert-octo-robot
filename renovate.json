{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": [
    "main"
  ],
  "labels": [
    "dependencies"
  ],
  "automergeStrategy": "merge-commit",
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchCurrentValue": "/^(latest|rolling)(@sha256:[a-f0-9]{64})?$/",
      "automerge": true,
      "matchPackageNames": [
        "*"
      ]
    }
  ]
}
