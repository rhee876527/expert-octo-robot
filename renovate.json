{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": [
    "main"
  ],
  "rebaseWhen": "conflicted",
  "labels": [
    "dependencies"
  ],
  "automergeStrategy": "merge-commit",
  "prHourlyLimit": 12,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)values\\.ya?ml$"
      ],
      "matchStrings": [
        "repository:\\s?\"?(?<depName>[^\"\\s]+)\"?\\s*\\ntag:\\s?\"?(?<currentValue>[^\"]+)\"?"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "includePaths": [
    "**/values.yaml",
    "**/values.yml"
  ]
}
