{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base","docker:pinDigests"],
  "baseBranches": ["main"],
  "labels": ["dependencies"],
  "automergeStrategy": "merge-commit",
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "pinDigests": true
    }
  ]
}
